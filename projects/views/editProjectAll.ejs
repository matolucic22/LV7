<!doctype html>
<html>
<head>
    <title>Edit project</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body         { padding-top:80px; }
    </style>
</head>
<body>
<div class="container">
<div class="col-sm-6 col-sm-offset-3">
    <form action="/<%= project._id%>/editall/post" method="post">
        <div class="form-group">
            <label>Naziv</label>
            <input type="text" class="form-control" name="naziv" value=<%= project.naziv_projekta %>>
        </div>
        <div class="form-group">
            <label>Opis</label>
            <input type="text" class="form-control" name="opis" value=<%= project.opis_projekta %>>
        </div>
        <div class="form-group">
            <label>Cijena</label>
            <input type="number" min="0" class="form-control" name="cijena" value=<%= project.cijena_projekta %>>
        </div>
        <div class="form-group">
            <label>Obavljeni poslovi</label>
            <input type="checkbox" class="form-control" name="obavljeni">
        </div>
        <div class="form-group">
            <label>Pocetak projekta</label>
            <input type="date" class="form-control" name="datum_pocetak" value=<%= project.datum_pocetak %>>
        </div>
        <div class="form-group">
            <label>Zavrsetak projekta</label>
            <input type="date" class="form-control" name="datum_zavrsetak" value=<%= project.datum_zavrsetak %>>
        </div>
        <div class="form-group" style="visibility: hidden;">
                <input type="textarea" name="clanovi" value=<%= project.clanovi %>>
        </div>
        <button type="submit" class="btn btn-warning btn-lg">Dodaj</button>
    </form>
</div>
</div>
</body>
</html>